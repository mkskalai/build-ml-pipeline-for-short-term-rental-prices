name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: input data artifact name
        type: string

      output_artifact:
        description: output data artifact name
        type: string

      output_type:
        description: type of the output artifact
        type: string

      output_description:
        description: description for the output artifact
        type: string

      min_price:
        description: minimum rental price to consider
        type: float

      max_price:
        description: maximum rental price to consider
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
